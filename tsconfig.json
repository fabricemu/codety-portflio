{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",                    // Required to allow `require()` or Node.js usage
    "moduleResolution": "Node",
    "strict": true,
    "rootDir": "src",                        // Where your source .ts files are
    "outDir": "dist",                        // Where compiled files go
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"],                        // Include all TypeScript in src/
  "exclude": ["node_modules", "dist"]
}
